<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_margin="@dimen/_12sdp"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/image_recipe"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_120sdp"
           android:background="@drawable/shape_card_recipes"
           android:scaleType="centerCrop"
           android:src="@drawable/img"
           android:clipToOutline="true"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <ImageView
           android:id="@+id/image_publisher"
           android:layout_width="@dimen/_32sdp"
           android:layout_height="@dimen/_32sdp"
           android:layout_marginStart="@dimen/_8sdp"
           android:layout_marginTop="@dimen/_8sdp"
           android:src="@drawable/user_image"
           android:scaleType="centerCrop"
           android:clipToOutline="true"
           app:layout_constraintStart_toStartOf="@id/image_recipe"
           app:layout_constraintTop_toTopOf="@id/image_recipe" />

       <TextView
           android:id="@+id/tv_publisher_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/_8sdp"
           android:text="Publisher Name"
           android:textColor="@color/white"
           android:textSize="@dimen/_12ssp"
           android:textStyle="bold"
           app:layout_constraintStart_toEndOf="@id/image_publisher"
           app:layout_constraintTop_toTopOf="@id/image_publisher"
           app:layout_constraintBottom_toBottomOf="@id/image_publisher" />

       <TextView
           android:id="@+id/tv_recipe_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_12sdp"
           android:text="@string/app_name"
           android:textColor="@color/black"
           android:textSize="@dimen/_14ssp"
           android:textStyle="bold"
           app:layout_constraintStart_toStartOf="@id/image_recipe"
           app:layout_constraintTop_toBottomOf="@id/image_recipe" />

       <TextView
           android:id="@+id/tv_description"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_12sdp"
           android:ellipsize="end"
           android:maxLines="2"
           android:text="@string/app_name"
           android:textColor="@color/gray_400"
           android:textSize="@dimen/_12ssp"
           android:textStyle="normal"
           app:layout_constraintStart_toStartOf="@id/image_recipe"
           app:layout_constraintTop_toBottomOf="@id/tv_recipe_name" />


       <TextView
           android:id="@+id/tv_category"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_6sdp"
           android:background="@drawable/shape_category"
           android:padding="@dimen/_8sdp"
           android:text="@string/app_name"
           android:textColor="@color/primary"
           android:textSize="@dimen/_12ssp"
           android:textStyle="normal"
           app:layout_constraintBottom_toBottomOf="@id/tv_recipe_name"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="@id/tv_recipe_name" />


   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>